{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/**/*"
  ],
  "paths": {
    "@routes": ["src/routes"],
    "@atoms": ["src/atoms"],
    "@views": ["src/views"],
    "@api": ["src/api"],
    "@hooks": ["src/hooks"],
    "@components": ["src/components"],
    "@utils": ["src/utils"],
    "@pages": ["src/pages"],
    "@types": ["src/types"],
  }
}
